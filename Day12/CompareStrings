package com.compare.strings;

import javax.swing.*;

public class CompareStrings {
    public static void main(String[] args) {

        //using JOptionPane class to get input names
        String name1 = JOptionPane.showInputDialog("Pleas enter name 1: ");
        String name2 = JOptionPane.showInputDialog("Pleas enter name 2: ");

        //to compare both strings (if equal)
        //can also do if (name1.equals(name2))
        if (name1.compareTo(name2) == 0)
        {
            System.out.println("name 1 is equal to name 2");
        }
        // if <0 then name 1 is first
        if (name1.compareTo(name2) < 0)
        {
            System.out.println("name 1 is first and name 2 is second");
        }
        // if >0 then name 2 is first
        if (name1.compareTo(name2) > 0)
        {
            System.out.println("name 2 is first and name 1 is second");
        }
        //exits program, status=0(no errors)
        System.exit(0);
    }
}
